// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String
  password String
  role     Role   @default(USER)
}

enum Role {
  ADMIN
  USER
}

model SubArt {
  id        Int      @id @default(autoincrement())
  type      String
  content   String
  Content   Content? @relation(fields: [contentId], references: [id])
  contentId Int?
}

model Synopsis {
  id      Int      @id @default(autoincrement())
  type    String
  content String
  chilren String[]
  Law     Law[]
}

model Content {
  id       Int      @id @default(autoincrement())
  art      String
  caput    String
  children SubArt[]
  Law      Law[]
}

model Law {
  id         Int      @id @default(autoincrement())
  updatedAt  DateTime @updatedAt @map("updated_at")
  title      String
  header     String[]
  footer     String[]
  synopsis   Synopsis @relation(fields: [synopsisId], references: [id])
  synopsisId Int
  content    Content  @relation(fields: [contentId], references: [id])
  url        String   @unique
  contentId  Int
}
